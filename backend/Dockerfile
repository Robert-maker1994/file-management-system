
FROM node:18-alpine

ARG DB_USER
ARG DB_PASSWORD
ARG DB_HOST
ARG DB_NAME
ARG PG_PORT

ENV DB_USER=${DB_USER}
ENV DB_PASSWORD=${DB_PASSWORD}
ENV DB_HOST=${DB_HOST}
ENV DB_NAME=${DB_NAME}
ENV PG_PORT=${PG_PORT}
ENV PORT ${PORT}


WORKDIR /app

COPY package.json ./

RUN npm install

COPY . .

EXPOSE 5001

CMD ["npm", "run", "start"]